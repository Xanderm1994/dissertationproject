@model IEnumerable<Global.Data.Content>

@{
    ViewBag.Title = "Quizzes";
}

<h2>Content</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentType)
        </td>
        <td>
            @Html.ActionLink("Manage", "Manage", new { id=item.ContentId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ContentId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ContentId })
        </td>
    </tr>
}

</table>
